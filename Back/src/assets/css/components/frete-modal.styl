body
    &.magalu
        .frete-options
            width 100%  
            margin-top 26px
            margin-bottom 26px

            &.hide
                display none

            > div
                display flex
                justify-content space-between
                align-items center

                span
                   font-size 14px 
                   color #59c00b

                > div
                    color #404040
                    font-size 12px

                    h4
                        font-size 14px
                        font-weight 500
                        margin 0

                svg
                    width 30px
                    height 30px
                    fill #999999
        .modal-frete
            position fixed
            width 100%
            height 100%
            background-color rgba(0,0,0,0.7)
            text-align center
            top 0
            left 0

            &.hide
                display none

        .close-modal
            width 20px
            height 20px
            position absolute
            right 30px
            left auto
            top 30px
            
            svg
                width 25px
                height 25px

        .modal-body
            margin 40px auto
            border-radius 8px
            overflow hidden
            width 80%

            article
                background #fff
                border-bottom-right-radius 8px
                border-bottom-left-radius 8px
                padding 8px 

                h2
                    font-size 18px
                    color #404040
                    font-weight 500
                    text-align left

                form
                    display flex
                    flex-direction column
                    justify-content flex-start
                    align-items flex-start

                    label
                        text-align left
                        color #0086ff
                        font-size 12px
                        font-weight 400

                    input
                        border 0
                        border-bottom 1px solid #0086ff
                        outline 0

                        &:placeholder
                            color #404040
                            font-weight 400
                            font-size 14px

            header
                background #0086ff
                display flex
                justify-content center
                padding-top 8px
                padding-bottom 8px
                border-top-right-radius 8px
                border-top-left-radius 8px

                svg
                    width 80px
                    height 80px