body
    &.magalu

        .product-name
            font-size 24px

        .review
            display flex
            align-items center
            svg
                width 16px
                height 16px
                margin-right 3px

            font-size 12px
            color #808080
            font-weight 400
            span
                margin-left 5px

        .details
            display flex
            flex-direction column
            margin-top 30px
            
            p
                font-size 14px
                font-weight 400
                color #404040
                max-height 48px
                overflow hidden

            h3
                width 100%
                display flex
                justify-content space-between
                font-size 16px
                font-weight 500
                color #404040

                span
                    width 24px
                    height 24px
            
                    svg
                        width 24px
                        height 24px
                        fill #999999

        .buy-buttons
            background #59c00b
            height 52px
            padding 0 15px
            border-radius 4px
            display flex
            align-items center
            margin-top 16px
            
            a
                color #fff
                display flex
                justify-content center
                position relative
                text-align center
                flex 1


                svg
                    width 32px
                    height 32px
                    fill #fff
                    position absolute
                    left 0
                    top 50%
                    margin-top -16px

        .frete-form
            background-color #f4f4f4
            padding 16px 12px
            border-radius 4px
            font-weight 14px
            font-weight 400
            color #404040

            svg
                width 18px
                height 18px

                fill #0086ff
                

        .card-options
            display flex
            justify-content space-between
            
            border 1px solid #ededed
            border-radius 4px
            padding 16px

            .parcel
                font-size 14px
                strong
                    font-weight 500
                    font-size 14px
            

            div
                display flex
                flex-direction column
                font-size 14px
                font-weight 400
                color #404040

                span
                    color #404040
                    font-weight 500
                    text-decoration underline

        .price
            font-size 14px
            color #404040

            .current-price
                text-decoration: line-through
                color #999999
                font-weight 400

            .sale-price
                color #404040
                font-size 24px
                font-weight 500

            .promotion
                font-size 14px
                font-weight 400

                span
                    color #59c00b

            .sell
                color #808080
                svg
                    width 60px
                    height 14px
                    margin 0
                    padding 0
                    margin-left 2px