body
    &.magalu
        background #fff
        .breadcumb
            padding 5px 9px
            width 100%

            svg
                width 60px

            color #bcbcbc
            font-size 14px
            overflow-x scroll
            white-space nowrap
        .header
            padding 5px 9px

            nav
                padding 0

                .container-fluid
                    padding 0

                .color-separator-container
                    width 100%
                    position relative
                    margin-bottom 10px
                    margin-top 10px

                .color-separator
                    background-image: linear-gradient(to right, #ffff4a 0px, #fcd000 4%, #ffc112 8%, #ffc112 11%, #ff8a00 16%, #ff5f5f 22%, #ff253a 28%, #ff37a8 37%, #c739ff 49%, #a400e1 56%, #2eceff 72%, #0086ff 80%, #72f772 94%, #00d604);
                    height 5px
                    width calc(100% + 21px)
                    max-width initial
                    overflow hidden
                    margin 0
                    padding 0
                    position absolute
                    border none
                    left 0
                    top 0

                .separator-color
                    display flex
                    align-items center
                    justify-content space-between
                    width 100%

                    .pin-icon
                        width 20px

                    .chevron
                        width 24px

                    span
                        flex 1

                    span
                        flex 1
                        display flex
                        
                        font-size 12px
                        font-weight normal
                        color #fff

                .container-search-full
                    width 100%
                    margin 0 auto
                    margin-top 5px
                    margin-bottom 5px

                .container-search
                    background #fff
                    height 36px
                    border-radius 8px
                    padding 6px 12px

                    
                    
                    form
                        display flex
                        align-items center
                        height 100%
                        display flex

                        button
                            flex 0 0 22px
                            height 24px
                            display flex
                            align-items center
                            border 0
                            outline 0

                            svg
                                color #818181
                                fill #818181

                        input
                            flex 1
                            height 100%
                            display flex
                            align-items center
                            border 0
                            box-shadow none
                            outline 0
                            padding 0

                            &, &:placeholder
                                color #818181

                .cart-button
                    width 24px
                    height 24px

                    svg
                        width 100%
                        height 100%

                button
                    padding 0

                    span
                        background-image none
                        display flex
                        flex-direction column
                        justify-content space-between

                    svg
                        width 24px
                        height 24px
            &, nav
                background-color #0086ff

                svg
                    fill #fff
                    color #fff
                    width 87px