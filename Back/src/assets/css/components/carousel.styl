#carouselProduct
    position relative

    .carousel-indicators
        position absolute
        right 0px
        bottom 0
        background-color #999999
        color #fefefe
        opacity .85
        padding 4px 8px
        margin 0
        left auto
        border-radius 6px   
        overflow hidden
        height 22px
        display flex
        flex-direction column
        justify-content flex-start

        span
            background initial
            width initial !important
            text-align center
            display flex
            justify-content center
            align-items center
            flex 0 0 100%
            border 0
            font-size 12px
            color #fefefe
            text-indent initial
            display flex
            align-items center
            padding 0
            margin 0
            width 100%
            height 100%
            &:not(.active)
                display none
