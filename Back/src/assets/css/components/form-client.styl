.form-client-container
    .title
        h3
            max-width 200px 
            margin 0 auto
            text-align center
            color #fff
            background #208656
            border-radius 20px
            padding 13px
            font-weight bold
            font-family sans-serif
            font-size 14px
            margin-top 20px
            text-transform uppercase

    .form-info
        text-align center
        font-size 18px
        color red
        width 100%
        max-width 460px 
        margin 20px auto
        margin-top 40px

    .form-footer
        a
            color #f26522
            text-transform uppercase
            font-weight bold

    .form-client,
    .form-client-update
        width 100%
        max-width 460px
        margin 0 auto
        margin-top 40px

        .password_input
            position relative

            span
                position absolute
                right 10px
                top 50%
                transform translateY(-50%)
                display flex
                justify-content center
                align-items center
                height 18px
                width 18px
                cursor pointer

                svg
                    width 18px
                    height 18px

        button
            width 100%
            height 40px
            background #208656
            border 0
            outline 0
            color #fff
            font-family: sans-serif
            border-radius 20px  
            font-weight 700
            text-transform uppercase

        .request
            a
                color #208656
                text-transform uppercase
                font-weight 700
                font-family sans-serif

        .input
            width 100%
            height 49px
            position relative
            border 1px solid #646464
            border-radius 6px
            padding 16px

            input
                background-color transparent
                outline 0
                border 0
                appearance none
                box-shadow none
                padding 0
                width 100%
                height 100%
                font-size 15px
                color #464646

                &::placeholder
                    text-transform uppercase
                    color #464646
                    font-size 15px

            label
                position absolute
                left 10px
                font-size 13px
                font-weight 500
                font-family sans-serif
                top -10px
                margin 0
                padding 0
                background #f8f9fa
                color #464646